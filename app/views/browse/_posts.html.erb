<% if @posts_streams.empty? %>
    <h3> no post yet </h3>
<% else %>
    <ul id="post_stream" class="wList wStream wStreamHomepage translateParent wStreamRedesign wStreamLargeHeadline WIntentionalStream_Content _4kg _4ks" style="min-height: 100px">
      <% @posts_streams.each do |post| %>
          <li class="uiUnifiedStory uiStreamStory genericStreamStory aid_1350692550">
          <div class="clearfix storyContent">
            <%= link_to image_tag('default_avatar.png', class: '_s0 profilePic _rw img'), '#', class: 'actorPhoto lfloat' %>
            <div class="wStoryInnerContent">
              <div class="mainWrapper">
                <div role="article">
                  <h5 class="wStreamMessage wStreamHeadline">
                    <div class="actorDescription actorName">
                      <%= link_to post.writer, '#' %>
                    </div>
                  </h5>
                  <h5 class="wStreamMessage userContentWrapper">
                    <span class="messageBody">
                      <div>
                        <span class="userContent">
                          <%= post.body %>
                        </span>
                      </div>
                    </span>
                  </h5>
                  <form class="commentable_item autoexpand_mode">
                    <span class="wStreamFooter">
                      <span class="WActionLinks WActionLinks_bottom">
                        <span>
                          <a href="" id="<%= post.id.to_s %>" name="like" class="WLikeLink" style = "<%= 'font-weight: bold;' if false %>" >
                            <%= "#{post.like} #{t('like.add')}" %>
                          </a>
                        </span>
                        Â·
                        <span>
                          <a href="" id="<%= post.id.to_s %>" name="dislike" class="WLikeLink" style = "<%= 'font-weight: bold;' if false %>" >
                            <%= "#{post.dislike} #{t('dislike.add')}" %>
                          </a>
                        </span>
                      </span>
                    </span>
                  </form>
                </div>
              </div>
            </div>
